<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}" dir="{{ settings.text_direction }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#C71585">
    
    <!-- Performance optimizations: DNS prefetch and preconnect -->
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="dns-prefetch" href="https://productreviews.shopifycdn.com">
    <link rel="dns-prefetch" href="https://www.google-analytics.com">
    <link rel="dns-prefetch" href="https://www.googletagmanager.com">
    
    {%- if canonical_url != blank -%}
      <link rel="canonical" href="{{ canonical_url }}">
    {%- endif -%}

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <!-- Dynamic SEO title generation -->
    <title>
      {%- liquid
        if template.name == 'index'
          echo shop.name | append: ' - Premium Artificial Jewellery & Kalamkari Textiles'
        elsif template.name == 'product'
          echo product.title | append: ' - ' | append: shop.name
        elsif template.name == 'collection'
          echo collection.title | append: ' Collection - ' | append: shop.name
        elsif template.name == 'blog'
          echo blog.title | append: ' - ' | append: shop.name
        elsif template.name == 'article'
          echo article.title | append: ' - ' | append: blog.title | append: ' - ' | append: shop.name
        else
          echo page_title
          if current_tags
            echo ' - tagged "' | append: current_tags.first | append: '"'
          endif
          if current_page != 1
            echo ' - Page ' | append: current_page
          endif
          unless page_title contains shop.name
            echo ' - ' | append: shop.name
          endunless
        endif
      -%}
    </title>

    <!-- Dynamic meta description -->
    {%- liquid
      if page_description
        assign meta_description = page_description | escape
      elsif template.name == 'index'
        assign meta_description = 'Discover premium artificial jewellery and authentic Kalamkari textiles at Kala Aabharanam. Shop traditional designs with modern elegance. Free shipping on orders over â‚¹999.'
      elsif template.name == 'product'
        assign meta_description = product.description | strip_html | truncate: 155 | escape
      elsif template.name == 'collection'
        assign meta_description = collection.description | default: 'Browse our ' | append: collection.title | append: ' collection featuring premium artificial jewellery and traditional textiles.' | strip_html | truncate: 155 | escape
      else
        assign meta_description = shop.description | default: 'Premium artificial jewellery and Kalamkari textiles' | strip_html | truncate: 155 | escape
      endif
    -%}
    <meta name="description" content="{{ meta_description }}">

    <!-- Open Graph meta tags -->
    <meta property="og:site_name" content="{{ shop.name }}">
    <meta property="og:url" content="{{ canonical_url | default: shop.url }}">
    <meta property="og:title" content="{{ page_title | default: shop.name }}">
    <meta property="og:type" content="website">
    <meta property="og:description" content="{{ meta_description }}">
    {%- if template.name == 'product' and product.featured_image -%}
      <meta property="og:image" content="http:{{ product.featured_image | image_url: width: 1200 }}">
      <meta property="og:image:secure_url" content="https:{{ product.featured_image | image_url: width: 1200 }}">
      <meta property="og:image:width" content="1200">
      <meta property="og:image:height" content="1200">
    {%- elsif settings.share_image -%}
      <meta property="og:image" content="http:{{ settings.share_image | image_url: width: 1200 }}">
      <meta property="og:image:secure_url" content="https:{{ settings.share_image | image_url: width: 1200 }}">
    {%- endif -%}

    <!-- Twitter Card meta tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ page_title | default: shop.name }}">
    <meta name="twitter:description" content="{{ meta_description }}">

    <!-- Additional SEO meta tags -->
    <meta name="robots" content="index,follow">
    <meta name="googlebot" content="index,follow">
    {%- if template.name == 'product' -%}
      <meta name="product:brand" content="{{ product.vendor | escape }}">
      <meta name="product:availability" content="{%- if product.available -%}in stock{%- else -%}out of stock{%- endif -%}">
      <meta name="product:condition" content="new">
      <meta name="product:price:amount" content="{{ product.price | money_without_currency | remove: ',' }}">
      <meta name="product:price:currency" content="{{ cart.currency.iso_code }}">
    {%- endif -%}

    {% render 'meta-tags' %}
    
    <!-- SEO Optimization -->
    {% render 'seo-optimization' %}
    
    <!-- Security headers and policies -->
    {% render 'security-headers' %}
    
    <!-- Critical CSS for above-the-fold content -->
    {% render 'critical-css' %}
    
    <!-- Performance monitoring -->
    {% render 'performance-monitor' %}

    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    {{ content_for_header }}

