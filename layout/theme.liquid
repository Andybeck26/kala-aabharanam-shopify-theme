    <!-- Cross-browser compatibility -->
    <script src="{{ 'cross-browser-compatibility.js' | asset_url }}" defer="defer"></script>
    
    <!-- Accessibility compliance -->
    <script src="{{ 'accessibility-compliance.js' | asset_url }}" defer="defer"></script>
    
    <!-- Monitoring system -->
    <script src="{{ 'monitoring-system.js' | asset_url }}" defer="defer"></script>
    
    <!-- Performance optimizations -->
    <script src="{{ 'performance-optimizations.js' | asset_url }}" defer="defer"></script>
    
