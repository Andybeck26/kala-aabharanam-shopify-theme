{
  "name": "kala-aabharanam-theme",
  "version": "1.0.0",
  "description": "Premium Shopify theme for Kala Aabharanam - Art of Jewellery",
  "main": "index.js",
  "scripts": {
    "dev": "shopify theme dev",
    "build": "shopify theme check",
    "deploy": "shopify theme push",
    "pull": "shopify theme pull",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.liquid",
    "lint:fix": "eslint . --ext .js,.liquid --fix",
    "qa:test": "node scripts/run-qa-tests.js",
    "qa:test:staging": "node scripts/run-qa-tests.js https://staging-kala-aabharanam.myshopify.com",
    "lighthouse": "lighthouse --output=html --output-path=docs/lighthouse-report.html",
    "accessibility": "axe --dir docs/accessibility-report"
  },
  "keywords": [
    "shopify",
    "theme",
    "ecommerce",
    "jewellery",
    "kalamkari"
  ],
  "author": "Kala Aabharanam",
  "license": "MIT",
  "devDependencies": {
    "@shopify/prettier-config": "^1.1.2",
    "@shopify/eslint-plugin": "^42.0.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "puppeteer": "^21.0.0",
    "lighthouse": "^11.0.0",
    "@axe-core/cli": "^4.8.0",
    "jest": "^29.0.0"
  },
  "prettier": "@shopify/prettier-config",
  "eslintConfig": {
    "extends": "@shopify/eslint-plugin"
  }
}