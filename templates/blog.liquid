{% comment %}
  Blog listing template for Kala Aabharanam
  Displays all blog articles with pagination and filtering
{% endcomment %}

<div class="blog-page">
  <div class="container">
    <!-- Blog Header -->
    <header class="blog-header">
      <h1 class="blog-title">{{ blog.title | default: 'Blog' }}</h1>
      {% if blog.description != blank %}
        <div class="blog-description">
          {{ blog.description }}
        </div>
      {% endif %}
    </header>

    <!-- Blog Navigation -->
    <nav class="blog-nav" aria-label="Blog categories">
      <ul class="blog-nav__list">
        <li class="blog-nav__item">
          <a href="{{ blog.url }}" 
             class="blog-nav__link {% unless current_tags %}blog-nav__link--active{% endunless %}">
            All Articles
          </a>
        </li>
        {% for tag in blog.all_tags %}
          <li class="blog-nav__item">
            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" 
               class="blog-nav__link {% if current_tags contains tag %}blog-nav__link--active{% endif %}">
              {{ tag }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    <!-- Articles Grid -->
    <div class="blog-articles">
      {% if blog.articles.size > 0 %}
        <div class="articles-grid">
          {% for article in blog.articles %}
            <article class="article-card">
              {% if article.image %}
                <div class="article-card__image">
                  <a href="{{ article.url }}">
                    <img src="{{ article.image | image_url: width: 400 }}"
                         alt="{{ article.image.alt | default: article.title }}"
                         loading="lazy"
                         class="article-card__img">
                  </a>
                </div>
              {% endif %}

              <div class="article-card__content">
                <div class="article-card__meta">
                  <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}" 
                        class="article-card__date">
                    {{ article.published_at | date: '%B %d, %Y' }}
                  </time>
                  {% if article.tags.size > 0 %}
                    <div class="article-card__tags">
                      {% for tag in article.tags limit: 2 %}
                        <span class="article-card__tag">{{ tag }}</span>
                      {% endfor %}
                    </div>
                  {% endif %}
                </div>

                <h2 class="article-card__title">
                  <a href="{{ article.url }}" class="article-card__title-link">
                    {{ article.title }}
                  </a>
                </h2>

                {% if article.excerpt != blank %}
                  <div class="article-card__excerpt">
                    {{ article.excerpt | strip_html | truncate: 150 }}
                  </div>
                {% else %}
                  <div class="article-card__excerpt">
                    {{ article.content | strip_html | truncate: 150 }}
                  </div>
                {% endif %}

                <div class="article-card__footer">
                  <span class="article-card__author">
                    By {{ article.author | default: shop.name }}
                  </span>
                  <a href="{{ article.url }}" class="article-card__read-more">
                    Read More
                    {% render 'icon', icon: 'arrow-right' %}
                  </a>
                </div>
              </div>
            </article>
          {% endfor %}
        </div>

        <!-- Pagination -->
        {% if paginate.pages > 1 %}
          <nav class="blog-pagination" aria-label="Blog pagination">
            {{ paginate | default_pagination }}
          </nav>
        {% endif %}

      {% else %}
        <div class="blog-empty">
          <h2>No articles found</h2>
          <p>Check back soon for new content!</p>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .blog-page {
    padding: 2rem 0;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .blog-title {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .blog-description {
    font-size: 1.1rem;
    color: var(--color-text);
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-nav {
    margin-bottom: 2rem;
  }

  .blog-nav__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .blog-nav__link {
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-secondary);
    border-radius: 25px;
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.3s ease;
  }

  .blog-nav__link:hover,
  .blog-nav__link--active {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .article-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .article-card:hover {
    transform: translateY(-5px);
  }

  .article-card__image {
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .article-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .article-card:hover .article-card__img {
    transform: scale(1.05);
  }

  .article-card__content {
    padding: 1.5rem;
  }

  .article-card__meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .article-card__date {
    color: var(--color-text);
  }

  .article-card__tags {
    display: flex;
    gap: 0.5rem;
  }

  .article-card__tag {
    background-color: var(--color-background);
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-size: 0.8rem;
    color: var(--color-primary);
  }

  .article-card__title {
    margin-bottom: 1rem;
  }

  .article-card__title-link {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    color: var(--color-primary);
    text-decoration: none;
    line-height: 1.3;
  }

  .article-card__title-link:hover {
    color: var(--color-accent);
  }

  .article-card__excerpt {
    color: var(--color-text);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .article-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--color-background);
  }

  .article-card__author {
    font-size: 0.9rem;
    color: var(--color-text);
  }

  .article-card__read-more {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .article-card__read-more:hover {
    color: var(--color-accent);
  }

  .blog-pagination {
    text-align: center;
  }

  .blog-empty {
    text-align: center;
    padding: 3rem 0;
  }

  @media (max-width: 768px) {
    .blog-title {
      font-size: 2rem;
    }

    .articles-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .blog-nav__list {
      justify-content: flex-start;
      overflow-x: auto;
      padding-bottom: 0.5rem;
    }

    .article-card__footer {
      flex-direction: column;
      gap: 0.5rem;
      align-items: flex-start;
    }
  }
</style>