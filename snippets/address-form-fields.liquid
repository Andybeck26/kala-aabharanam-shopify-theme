{% comment %}
  Address Form Fields Snippet
  Reusable form fields for address creation and editing
{% endcomment %}

<div class="form-row">
  <div class="form-field">
    <label for="address-first-name" class="form-label">
      {{ 'customer.addresses.first_name' | t }}
      <span class="form-required" aria-label="required">*</span>
    </label>
    <input
      type="text"
      id="address-first-name"
      name="address[first_name]"
      class="form-input"
      value="{{ form.first_name }}"
      required
      autocomplete="given-name"
    >
  </div>

  <div class="form-field">
    <label for="address-last-name" class="form-label">
      {{ 'customer.addresses.last_name' | t }}
      <span class="form-required" aria-label="required">*</span>
    </label>
    <input
      type="text"
      id="address-last-name"
      name="address[last_name]"
      class="form-input"
      value="{{ form.last_name }}"
      required
      autocomplete="family-name"
    >
  </div>
</div>

<div class="form-field">
  <label for="address-company" class="form-label">
    {{ 'customer.addresses.company' | t }}
  </label>
  <input
    type="text"
    id="address-company"
    name="address[company]"
    class="form-input"
    value="{{ form.company }}"
    autocomplete="organization"
  >
</div>

<div class="form-field">
  <label for="address-address1" class="form-label">
    {{ 'customer.addresses.address1' | t }}
    <span class="form-required" aria-label="required">*</span>
  </label>
  <input
    type="text"
    id="address-address1"
    name="address[address1]"
    class="form-input"
    value="{{ form.address1 }}"
    required
    autocomplete="address-line1"
    placeholder="Street address, P.O. box, company name, c/o"
  >
</div>

<div class="form-field">
  <label for="address-address2" class="form-label">
    {{ 'customer.addresses.address2' | t }}
  </label>
  <input
    type="text"
    id="address-address2"
    name="address[address2]"
    class="form-input"
    value="{{ form.address2 }}"
    autocomplete="address-line2"
    placeholder="Apartment, suite, unit, building, floor, etc."
  >
</div>

<div class="form-row">
  <div class="form-field">
    <label for="address-city" class="form-label">
      {{ 'customer.addresses.city' | t }}
      <span class="form-required" aria-label="required">*</span>
    </label>
    <input
      type="text"
      id="address-city"
      name="address[city]"
      class="form-input"
      value="{{ form.city }}"
      required
      autocomplete="address-level2"
    >
  </div>

  <div class="form-field">
    <label for="address-province" class="form-label">
      {{ 'customer.addresses.province' | t }}
      <span class="form-required" aria-label="required">*</span>
    </label>
    <select
      id="address-province"
      name="address[province]"
      class="form-select"
      required
      autocomplete="address-level1"
    >
      <option value="">{{ 'customer.addresses.select_province' | t }}</option>
      {% for province in all_country_option_tags %}
        {{ province }}
      {% endfor %}
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-field">
    <label for="address-zip" class="form-label">
      {{ 'customer.addresses.zip' | t }}
      <span class="form-required" aria-label="required">*</span>
    </label>
    <input
      type="text"
      id="address-zip"
      name="address[zip]"
      class="form-input"
      value="{{ form.zip }}"
      required
      autocomplete="postal-code"
    >
  </div>

  <div class="form-field">
    <label for="address-country" class="form-label">
      {{ 'customer.addresses.country' | t }}
      <span class="form-required" aria-label="required">*</span>
    </label>
    <select
      id="address-country"
      name="address[country]"
      class="form-select"
      required
      autocomplete="country"
    >
      <option value="">{{ 'customer.addresses.select_country' | t }}</option>
      {% for country in all_country_option_tags %}
        {{ country }}
      {% endfor %}
    </select>
  </div>
</div>

<div class="form-field">
  <label for="address-phone" class="form-label">
    {{ 'customer.addresses.phone' | t }}
    {% if settings.require_phone_number %}
      <span class="form-required" aria-label="required">*</span>
    {% endif %}
  </label>
  <input
    type="tel"
    id="address-phone"
    name="address[phone]"
    class="form-input"
    value="{{ form.phone }}"
    {% if settings.require_phone_number %}required{% endif %}
    autocomplete="tel"
    placeholder="+91 98765 43210"
  >
  <div class="form-help">
    Include country code for international numbers
  </div>
</div>

<div class="form-field form-field--checkbox">
  <label class="checkbox-label">
    <input
      type="checkbox"
      name="address[default]"
      class="checkbox-input"
      value="1"
      {% if form.default %}checked{% endif %}
    >
    <span class="checkbox-checkmark"></span>
    <span class="checkbox-text">
      {{ 'customer.addresses.set_as_default' | t }}
    </span>
  </label>
</div>

{% if form.errors %}
  <div class="form-errors" role="alert">
    <h3 class="form-errors__title">{{ 'customer.addresses.error' | t }}</h3>
    <ul class="form-errors__list">
      {% for error in form.errors %}
        <li class="form-errors__item">
          {{ error | first | capitalize }} {{ error | last }}
        </li>
      {% endfor %}
    </ul>
  </div>
{% endif %}