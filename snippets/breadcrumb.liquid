{% comment %}
  Breadcrumb Navigation Snippet
  Displays navigation breadcrumbs for better user orientation
{% endcomment %}

<nav class="breadcrumb" aria-label="{{ 'accessibility.breadcrumb' | t }}">
  <ol class="breadcrumb__list">
    <li class="breadcrumb__item">
      <a href="{{ routes.root_url }}" class="breadcrumb__link">
        {{ 'general.breadcrumb.home' | t }}
      </a>
    </li>
    
    {% if collection %}
      <li class="breadcrumb__item">
        <a href="{{ collection.url }}" class="breadcrumb__link">
          {{ collection.title }}
        </a>
      </li>
    {% endif %}
    
    {% if product %}
      {% if collection %}
        <li class="breadcrumb__item">
          <span class="breadcrumb__current">{{ product.title }}</span>
        </li>
      {% else %}
        <li class="breadcrumb__item">
          <a href="{{ routes.all_products_collection_url }}" class="breadcrumb__link">
            {{ 'general.breadcrumb.products' | t }}
          </a>
        </li>
        <li class="breadcrumb__item">
          <span class="breadcrumb__current">{{ product.title }}</span>
        </li>
      {% endif %}
    {% endif %}
    
    {% if page %}
      <li class="breadcrumb__item">
        <span class="breadcrumb__current">{{ page.title }}</span>
      </li>
    {% endif %}
    
    {% if blog %}
      <li class="breadcrumb__item">
        <a href="{{ blog.url }}" class="breadcrumb__link">
          {{ blog.title }}
        </a>
      </li>
    {% endif %}
    
    {% if article %}
      <li class="breadcrumb__item">
        <span class="breadcrumb__current">{{ article.title }}</span>
      </li>
    {% endif %}
    
    {% if current_page %}
      <li class="breadcrumb__item">
        <span class="breadcrumb__current">{{ current_page }}</span>
      </li>
    {% endif %}
  </ol>
</nav>