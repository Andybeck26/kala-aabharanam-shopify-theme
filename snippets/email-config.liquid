{% comment %}
  GDPR Compliance Configuration
  For privacy and consent management
{% endcomment %}

<script type="application/json" id="gdpr-config">
{
  "consent_management": {
    "double_opt_in": true,
    "consent_tracking": true,
    "preference_center": {
      "enabled": true,
      "options": [
        {
          "id": "promotional",
          "label": "Promotional emails and special offers",
          "default": true
        },
        {
          "id": "product_updates",
          "label": "New product announcements",
          "default": true
        },
        {
          "id": "care_tips",
          "label": "Jewelry care tips and guides",
          "default": false
        },
        {
          "id": "blog_updates",
          "label": "Blog posts and cultural stories",
          "default": false
        }
      ]
    },
    "unsubscribe": {
      "one_click": true,
      "feedback_collection": true,
      "win_back_campaign": true
    }
  }
}
</script>

{% comment %}
  Analytics and Tracking Configuration
  For email performance monitoring
{% endcomment %}

<script type="application/json" id="analytics-config">
{
  "tracking": {
    "google_analytics": {
      "enabled": true,
      "utm_parameters": {
        "source": "email",
        "medium": "newsletter",
        "campaign": "dynamic"
      }
    },
    "facebook_pixel": {
      "enabled": true,
      "events": ["ViewContent", "AddToCart", "Purchase"]
    },
    "custom_events": [
      {
        "name": "email_click",
        "parameters": ["email_type", "link_position", "customer_segment"]
      },
      {
        "name": "email_conversion",
        "parameters": ["email_campaign", "conversion_value", "time_to_convert"]
      }
    ]
  },
  "kpis": [
    {
      "metric": "open_rate",
      "target": 25,
      "benchmark": "jewelry_industry"
    },
    {
      "metric": "click_rate",
      "target": 3.5,
      "benchmark": "jewelry_industry"
    },
    {
      "metric": "conversion_rate",
      "target": 2.0,
      "benchmark": "ecommerce_average"
    },
    {
      "metric": "revenue_per_email",
      "target": 15,
      "currency": "INR"
    }
  ]
}
</script>

<style>
  /* Hide configuration scripts from display */
  script[type="application/json"] {
